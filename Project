<script>
function check(){
let p=document.getElementById("pass").value;
let bar=document.getElementById("bar");
let text=document.getElementById("text");
let tips=document.getElementById("tips");

let s=0;
let t=[];

if(p.length>=8)s++; else t.push("Minimum 8 characters");
if(/[A-Z]/.test(p))s++; else t.push("Add uppercase letter");
if(/[0-9]/.test(p))s++; else t.push("Include number");
if(/[!@#$%^&*]/.test(p))s++; else t.push("Add symbol");

let width=["0%","25%","50%","75%","100%"];
let color=["","red","orange","yellow","lime"];
let label=["","Weak ‚ùå","Medium ‚ö†","Good üëç","Strong üîê"];

bar.style.width=width[s];
bar.style.background=color[s];
text.innerHTML=label[s];

if(s<4) tips.innerHTML="Suggestions:<br>"+t.join("<br>");
else tips.innerHTML="Estimated crack time: 200+ years üöÄ";
}

function toggle(){
let x=document.getElementById("pass");
x.type=(x.type==="password")?"text":"password";
}

function generate(){
let chars="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^&*";
let pass="";
for(let i=0;i<14;i++)
pass+=chars[Math.floor(Math.random()*chars.length)];
document.getElementById("pass").value=pass;
check();
}
</script>

